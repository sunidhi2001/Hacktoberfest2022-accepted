class Solution {
    public int numberOfSteps(int num) {
        int count=0;
        do{
            if(num==0)
                return 0;
            
            if(num%2==0){
                num = num/2;
            }
            else
                num -= 1;
            count++;
            
        }while(num>0);
        return count;
    }
}
